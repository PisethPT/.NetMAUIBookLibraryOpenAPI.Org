<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookLibraryOpenAPI.Org.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookLibraryOpenAPI.Org"
    FlyoutBehavior="Flyout"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Title="BookLibraryOpenAPI.Org"
    IconImageSource="openlibrary_logo.png"
    Shell.NavBarIsVisible="True">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="Gainsboro"
                  HeightRequest="100"
                  Padding="20">
                <Image Aspect="AspectFit"
                       Source="openlibrary_logo.png"
                       Opacity="0.6" />
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <!--<ShellContent
            Title="Home"/>
        <ShellContent
            Title="Trending Books"/>
        <ShellContent
            Title="Other Books"/>
        <ShellContent
            Title="About Us"/>-->
    </FlyoutItem>

    <ShellContent
        Title="Open Library"
        FlyoutItemIsVisible="True"
        Shell.TitleColor="Black"
        Shell.BackgroundColor="Gainsboro"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
